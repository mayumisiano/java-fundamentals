package fundamentosLogica.Lista2;

import java.util.Scanner;

public class CodigoUsuario {

	public static void main(String[] args) {
		int codigoUsuario,  senhaUsuario = 0;
		int codigo = 1234 ;
		int senha = 9999;
				
		Scanner sc = new Scanner(System.in);
		System.out.println("Insira o c칩digo de usu치rio: ");
		codigoUsuario = sc.nextInt();
		
		if( codigoUsuario != codigo) {
			System.out.println("Usu치rio Inv치lido!");
		}else if(codigoUsuario == codigo && senhaUsuario != senha) {
			System.out.println("Senha incorreta.");
		}else if(codigoUsuario == codigo && senhaUsuario == senha) {
			System.out.println("Acesso permitido");
		}		
	}

}
